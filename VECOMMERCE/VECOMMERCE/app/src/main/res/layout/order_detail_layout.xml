<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    android:elevation="3dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/product_image_myoder"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:src="@drawable/image_xoami"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:text="Xoami 8 Lite"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_image_myoder" />


    <TextView
        android:id="@+id/product_price_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:text="RS. 49999/"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/product_image_myoder"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/boder_background"
        android:backgroundTint="@color/black"
        android:paddingStart="7dp"
        android:paddingTop="2dp"
        android:paddingEnd="7dp"
        android:paddingBottom="2dp"
        android:text="Qty:1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/product_image_myoder"
        app:layout_constraintEnd_toStartOf="@id/product_image_myoder" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/iron"
        app:layout_constraintTop_toBottomOf="@+id/product_image_myoder" />

    <ImageView
        android:id="@+id/point1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="@id/tv_title_order"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <ProgressBar
        android:id="@+id/progress1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:progress="100"
        android:progressTint="@color/green"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/point1"
        app:layout_constraintTop_toTopOf="@+id/point1" />

    <ImageView
        android:id="@+id/point2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="@id/tv_title_order"
        app:layout_constraintTop_toBottomOf="@id/point1" />

    <ProgressBar
        android:id="@+id/progress2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:progress="100"
        android:progressTint="@color/green"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/point2"
        app:layout_constraintTop_toTopOf="@+id/point2" />

    <ImageView
        android:id="@+id/point3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="@id/tv_title_order"
        app:layout_constraintTop_toBottomOf="@id/point2" />

    <ProgressBar
        android:id="@+id/progress3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:progress="100"
        android:progressTint="@color/green"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/point3"
        app:layout_constraintTop_toTopOf="@+id/point3" />

    <ImageView
        android:id="@+id/point4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_circle"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="@id/tv_title_order"
        app:layout_constraintTop_toBottomOf="@id/point3" />

    <TextView
        android:id="@+id/ordered_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Orderd"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point1"
        app:layout_constraintStart_toEndOf="@id/point1"
        app:layout_constraintTop_toTopOf="@id/point1" />

    <TextView
        android:id="@+id/ordered_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 12th Dec 2013 - 7:00 AM"
        android:textColor="@color/xam"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point1"
        app:layout_constraintStart_toEndOf="@id/ordered_title"
        app:layout_constraintTop_toTopOf="@id/point1" />

    <TextView
        android:id="@+id/ordered_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your order has been placed"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/ordered_title"
        app:layout_constraintTop_toBottomOf="@id/ordered_title" />

    <TextView
        android:id="@+id/packed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Packed"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point2"
        app:layout_constraintStart_toEndOf="@id/point2"
        app:layout_constraintTop_toTopOf="@id/point2" />

    <TextView
        android:id="@+id/packed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 5th Dec 2013 - 9:00 AM"
        android:textColor="@color/xam"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point2"
        app:layout_constraintStart_toEndOf="@id/packed_title"
        app:layout_constraintTop_toTopOf="@id/point2" />

    <TextView
        android:id="@+id/packed_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your order has been placed"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/packed_title"
        app:layout_constraintTop_toBottomOf="@id/packed_title" />
    <TextView
        android:id="@+id/shipping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Shipping"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point3"
        app:layout_constraintStart_toEndOf="@id/point3"
        app:layout_constraintTop_toTopOf="@id/point3" />

    <TextView
        android:id="@+id/shipping_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 4th Dec 2013 - 9:00 AM"
        android:textColor="@color/xam"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point3"
        app:layout_constraintStart_toEndOf="@id/shipping_title"
        app:layout_constraintTop_toTopOf="@id/point3" />

    <TextView
        android:id="@+id/shipping_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your order has shiped placed"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/shipping_title"
        app:layout_constraintTop_toBottomOf="@id/shipping_title" />
    <TextView
        android:id="@+id/deliverd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Deliverd"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point4"
        app:layout_constraintStart_toEndOf="@id/point4"
        app:layout_constraintTop_toTopOf="@id/point4" />

    <TextView
        android:id="@+id/deliverd_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 4th Dec 2013 - 6:00 AM"
        android:textColor="@color/xam"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/point4"
        app:layout_constraintStart_toEndOf="@id/deliverd_title"
        app:layout_constraintTop_toTopOf="@id/point4" />

    <TextView
        android:id="@+id/deliverd_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your order has deliverd placed"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/deliverd_title"
        app:layout_constraintTop_toBottomOf="@id/deliverd_title" />
</android.support.constraint.ConstraintLayout>